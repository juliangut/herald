{
  "name": "juliangut/herald",
  "description": "Analise tools reporter",
  "keywords": [
    "junit",
    "pmd",
    "checkstyle",
    "pdepend",
    "reports"
  ],
  "homepage": "https://github.com/juliangut/herald",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com"
    }
  ],
  "require": {
    "php": ">=5.4",
    "symfony/console": "^2.6",
    "symfony/filesystem": "^2.6",
    "twig/twig": "^1.18"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.5",
    "squizlabs/php_codesniffer": "~2",
    "phpmd/phpmd": "~2.2",
    "sebastian/phpcpd": "~2.0",
    "nikic/php-parser": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Herald\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Herald\\Tests\\": "tests/HeraldTests/"
    }
  },
  "bin": [
    "bin/herald"
  ]
}
